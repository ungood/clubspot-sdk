{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "lib": [
      "ES2022",
      "ESNext.Decorators",
      "ES2015.Symbol"
    ],
    "moduleResolution": "node16",
    "rootDir": ".",
    "outDir": "build",
    "useDefineForClassFields": false, /* This is needed for property decorators to work as I want them to */
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
  },
  "include": [
    "src",
    "scripts",
    "__tests__"
  ]
}
